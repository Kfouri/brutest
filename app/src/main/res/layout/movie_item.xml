<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/item_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="@dimen/movie_item_item_parent_marginBottom"
    android:layout_height="@dimen/movie_item_item_parent_height">

    <ImageView
        android:id="@+id/imageView_poster"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/viewColor"
        android:alpha="0.7"
        android:background="@drawable/background_list_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/textView_title"
        style="@style/TextStyle3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/movie_item_textView_title_marginStart"
        android:layout_marginEnd="@dimen/movie_item_textView_title_marginEnd"
        android:layout_marginBottom="@dimen/movie_item_textView_title_marginBottom"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="TITLE" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/movie_item_layout_category_marginTop"
        android:layout_marginEnd="@dimen/movie_item_layout_category_marginEnd"
        android:background="@color/dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/movie_item_textView_category_marginStart"
            android:layout_marginTop="@dimen/movie_item_textView_category_marginTop"
            android:layout_marginEnd="@dimen/movie_item_textView_category_marginEnd"
            android:layout_marginBottom="@dimen/movie_item_textView_category_marginBottom"
            style="@style/TextStyle8"
            android:textAllCaps="true"
            tools:text="ADVENTURE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>